<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="310dp"
    android:layout_height="wrap_content"
    android:background="@color/white"
    >

    <TextView
        android:id="@+id/textTVMovieCategoryTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:ellipsize="end"
        android:fontFamily="@font/poppins_bold"
        android:maxLines="2"
        android:layout_marginEnd="5dp"
        android:text="QURMANGAZY / 2 Ep"
        android:textColor="?attr/colorOnPrimary"
        android:textColorHint="@color/grey_700"
        android:textSize="13sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/imgMovieCategory"
        app:layout_constraintTop_toTopOf="@id/imgMovieCategory" />

    <TextView
        android:id="@+id/textTVMovieCategoryDescription"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:ellipsize="end"
        android:fontFamily="@font/sf_regular"
        android:maxLines="1"
        android:text="rrrrrrrrr rrrrr eeeeeeeeeeeeee"
        android:textColor="?attr/colorOnSecondary"
        android:textSize="12sp"
        android:layout_marginEnd="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/textTVMovieCategoryTitle"
        app:layout_constraintTop_toBottomOf="@+id/textTVMovieCategoryTitle" />

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/imgMovieCategory"
        android:layout_width="120dp"
        android:layout_height="93dp"

        android:scaleType="centerCrop"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:shapeAppearanceOverlay="@style/style_corner_for_image_8dp"
        app:srcCompat="@drawable/ic_main_icon_app" />
</androidx.constraintlayout.widget.ConstraintLayout>
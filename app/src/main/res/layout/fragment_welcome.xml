<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".presentation.ui.fragmentLog.WelcomeFragment"
    >


    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/viewPager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnSkipWelcomeFragment"
        android:layout_width="70dp"
        android:layout_height="24dp"
        android:layout_gravity="end"
        android:layout_marginTop="60dp"
        android:layout_marginEnd="20dp"
        android:background="@drawable/button_little_white_shape"
        android:fontFamily="@font/sf_medium"
        android:text="Өткізу"
        android:textAllCaps="false"
        android:textColor="?attr/colorOnPrimary"
        android:textSize="12sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:orientation="vertical">

        <com.tbuonomo.viewpagerdotsindicator.DotsIndicator
            android:id="@+id/dotsIndicator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|center"
            app:dotsColor="@color/grey_400"
            app:dotsSize="7dp"
            app:dotsSpacing="4dp"
            app:dotsWidthFactor="2.5"
            app:selectedDotColor="@color/primary_300">

        </com.tbuonomo.viewpagerdotsindicator.DotsIndicator>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnNextInLogInPage"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_gravity="bottom"
            android:layout_marginStart="24dp"
            android:layout_marginTop="24dp"
            android:layout_marginEnd="24dp"
            android:layout_marginBottom="38dp"
            android:background="@drawable/button_shape"
            android:fontFamily="sans-serif"
            android:text="Әрі қарай"
            android:textColor="@color/white"
            android:textAllCaps="false" />

    </LinearLayout>


</FrameLayout>